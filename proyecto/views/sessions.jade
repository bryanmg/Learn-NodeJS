extends ./layout.jade
block contenido
	div(class = "right-space col-md-4 remove-float center-block big-top-space")
		h1(class="text-center") Registrate 
		form(action="/users" method="POST")
			div(class="form-group")
				label(for="emial") Email 
				input(type="text" name="email" placeholder="Email" id="email" class="form-control")
			div(class="form-group")
				label(for="password") Pasword 
				input(type="password" name="password" placeholder="consraña" id="password" class="form-control")
			div(class="form-group")
				label(for="p_confirmation") Pasword confirmation 
				input(type="password" name="p_confirmation" placeholder="confirmation" id="p_confirmation" class="form-control")
			div(class="form-group")
				label(for="username") Nombre de usuario
				input(type="text" name="username" placeholder="Usuario" id="username" class="form-control")


			div(class="row")
				div(class="col-xs-12 col-sm-6")
					input(type="submit" value="Iniciar sesión" class="btn btn-info")
				div(class="col-xs-12 col-sm-6 text-right")
					a(href="/login") Ya tengo una cuenta